@using Child_Universe.Models;

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome.css")
   </head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Дитячий <i class="fa fa-circle"></i> Всесвіт</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="@Url.Action("Index", "Home")">Головна сторінка <i class="fa fa-home" aria-hidden="true"></i></a></li>
                    <li><a href="#">Про нас <i class="fa fa-user" aria-hidden="true"></i></a></li>
                    <li><a href="#">Доставка і магазини <i class="fa fa-bus" aria-hidden="true"></i></a></li>
                    <li><a href="#">Контакти <i class="fa fa-envelope-o" aria-hidden="true"></i></a></li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        
                        <li><a href="@Url.Action("Sign", "Account")">Вхід/Реєстрація <i class="fa fa-sign-in" aria-hidden="true"></i></a></li>
                    }
                    else
                    {
                        <li><a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name <i class="fa fa-user" aria-hidden="true"></i></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Профіль</a></li>
                                <li><a href="#">Налаштування</a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("Logout", "Account")">Вийти</a></li>
                            </ul>
                        </li>
                    }
                    <li><a href="#">Корзина<i class="fa fa-shopping-cart" aria-hidden="true"></i></a></li>

                </ul>
            </div>
        </div>
    </header>
    @RenderBody()
    <footer>

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
    @RenderSection("authscript", false)
</body>
</html>
